<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>

        <body>

            <%- include('./partials/nav.ejs')%>
                <div class="blogs content">
                    <h2>All Blogs</h2>

                    <p>Random number: <%= random %></p>

                        <% if (blogs.length> 0){ %>
                            <% blogs.forEach(blog=> { %>
                                <div class="blog-card">
                                    <h3 class="title"><%= blog.title %></h3>
                                        <span><%=blog.createdAt
                                                %></span>
                                            <p class="snippet"><strong><%=
                                                        blog.snippet %></strong></p>
                                                <p class="snippet"><%= blog.body
                                                        %></p>
                                                </div>
                                                <% })%>
                                                    <% } else { %>
                                                        <p>No blogs to
                                                            display...</p>
                                                        <% } %>
                                                        </div>
                                                        <%-
                                                            include('./partials/footer.ejs')%>
                                                            <%= currentYear%>
                                                            </body>
                                                        </html>