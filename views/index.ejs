<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>

        <body>

            <%- include('./partials/nav.ejs')%>
                <div class="blogs content">
                    <h2>All Blogs</h2>

                    <p>Random number: <%= random %></p>

                        <% if (blogs.length> 0){ %>
                            <% blogs.forEach(blog=> { %>
                                <div class="blog-card">
                                    <a class="single" href="/blogs/<%= blog._id
                                        %>"
                                        <h3 class="title"><%= blog.title %></h3>
                                            <span><small><%=blog.createdAt
                                                        %></small></span>
                                                <p class="snippet"><strong><%=
                                                            blog.snippet %></strong></p>
                                                    <p class="snippet"><%=
                                                            blog.body
                                                            %></p>
                                                    </a>
                                                </div>
                                                <% })%>
                                                    <% } else { %>
                                                        <p>No blogs to
                                                            display...</p>
                                                        <% } %>
                                                        </div>
                                                        <%-
                                                            include('./partials/footer.ejs')%>
                                                            <%=
                                                                currentYear%>
                                                            </body>
                                                        </html>